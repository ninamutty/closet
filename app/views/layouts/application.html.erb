<!DOCTYPE html>
<html>
<head>
  <title>Closet</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
  <nav>
    <ul class="nav navbar-nav">
      <li> <%= link_to "Home", landings_index_path %></li>
      <% if current_user %>
        <li> Signed in as <strong><%= current_user.name %></strong>!  </li>
        <%= link_to "Sign out", logout_path, id: "sign_out", method: :delete%>
      <% else %>
        <li><%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>  </li>
      <% end %>
    </ul>
  </nav>

  </header>


<%= yield %>

</body>
</html>























