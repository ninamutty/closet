<p id="notice"><%= notice %></p>

<div class="filter-menu-container">
<div class="filter-menu">
    <h3><%= link_to "All", outfits_path %></h3>
</div>

<div class="filter-menu">
<ul class="dropdown menu"  data-dropdown-menu>
  <li class="has-dropdown menu" >
    <a href="#"><h3> Categories </h3></a>
    <ul class="dropdown menu vertical category-dropdown">
      <li> <%= link_to "Casual", category_path(category: 'casual') %> </li>
      <li> <%= link_to "Business", category_path(category: 'business') %> </li>
      <li> <%= link_to "Night Out", category_path(category: 'night_out') %> </li>
      <li> <%= link_to "Fancy", category_path(category: 'fancy') %> </li>
    </ul>
  </li>
</ul>
</div>

<div class="filter-menu">
  <h3><%= link_to "Favorites", favorite_path(favorite: true) %> </h3>
</div>

<div class="filter-menu">
  <ul class="dropdown menu"  data-dropdown-menu>
  <li class="has-dropdown menu" >
  <a href="#"><h3> Tags </h3></a>
  <ul class="dropdown menu vertical row">
      <% if @tagged_outfits == nil %>
        <%= form_tag(tags_path, method: :get, class: 'tags-form-filtering') do %>
          <% @tags.each do |tag| %>
            <%= hidden_field_tag :category, @category %>
            <%= hidden_field_tag :favorite, @favorite %>
            <li class="columns small-6 medium-6 tags-dropdown-form"><a>
              <%= label_tag(tag.label) %>
              <%= check_box_tag "search_tags[]", tag.label %>
            </a></li>
          <% end %>
          <%= submit_tag("SEARCH", class: 'secondary button search-button tags-search-button') %>
        <% end %>
      <% end %>
  </ul>
  </li>
</ul>
</div>
</div>



