<h1>Listing Outfits</h1>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Photos</th>
      <!-- <th>Category</th>
      <th>Reworn count</th> -->
      <th>Favorite</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @outfits.each do |outfit| %>
      <tr>
        <td><%= link_to(outfit.name, outfit_path(outfit.id.to_i))%></td>
        <% photo = outfit.photo %>
        <% if photo != nil %>
          <td><%= link_to(image_tag(outfit.photo.url(:medium), alt: "photo of #{outfit.name}"), outfit_path(outfit.id)) %></td>
        <% else %>
          <td>No Photo</td>
        <% end %>
        <!-- <td><%= outfit.category %></td>
        <td><%= outfit.reworn_count %></td> -->
        <td><%= outfit.favorite ? "yes" : "no" %></td>
        <td><%= link_to 'Show', outfit_path(outfit.id) %></td>
        <td><%= link_to 'Edit', edit_outfit_path(outfit) %></td>
        <td><%= link_to 'Destroy', outfit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

