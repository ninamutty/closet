<% unless @user_outfits == nil %>
  <% if @category == nil || @category == ''  %>
  <h3> Categories </h3>
    <p> <%= link_to "Casual", category_path(category: 'casual', favorite: true, tagged_outfits: @tagged_outfits) %> </p>
    <p> <%= link_to "Business", category_path(category: 'business', favorite: true, tagged_outfits: @tagged_outfits) %> </p>
    <p> <%= link_to "Night Out", category_path(category: 'night_out', favorite: true, tagged_outfits: @tagged_outfits) %> </p>
    <p> <%= link_to "Fancy", category_path(category: 'fancy', favorite: true, tagged_outfits: @tagged_outfits) %> </p>
    <% end %>

    <% if @tagged_outfits == nil %>
    <%= form_tag(tags_path, method: :get) do %>
      <% @tags.each do |tag| %>
        <%= hidden_field_tag :favorite, true %>
        <%= hidden_field_tag :category, @category %>
        <%= label_tag(tag.label) %>
        <%= check_box_tag "search_tags[]", tag.label %>
      <% end %>
      <%= submit_tag("SEARCH", class: 'secondary button search-button') %>
    <% end %>
  <% end %>

        <%= render partial: 'sectionindex' %>
<% else %>
  <h3> Please <%= link_to 'Sign In', "/auth/facebook", id: "sign_in" %> to Begin </h3>
<% end %>
